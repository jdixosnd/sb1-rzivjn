---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Kashmir Tour Package - 7 Nights 8 Days of Paradise on Earth" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--primary: #ff4040;
		--text-dark: #333;
		--text-light: #666;
	}
	html {
		font-family: system-ui, sans-serif;
		background: #fff;
		margin: 0;
		padding: 0;
	}
	body {
		margin: 0;
		padding: 0;
	}
</style>